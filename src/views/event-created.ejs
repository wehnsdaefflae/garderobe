<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#10b981">
  <title>Event Created - Garderobe Digital</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: #fff;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .container {
      max-width: 700px;
      width: 100%;
    }

    .card {
      background: rgba(255, 255, 255, 0.95);
      color: #1f2937;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }

    .success-icon {
      text-align: center;
      font-size: 64px;
      margin-bottom: 20px;
    }

    h1 {
      font-size: 32px;
      font-weight: 900;
      text-align: center;
      margin-bottom: 10px;
      color: #10b981;
    }

    .subtitle {
      text-align: center;
      color: #6b7280;
      margin-bottom: 40px;
    }

    .url-section {
      margin-bottom: 30px;
    }

    .url-label {
      font-size: 14px;
      font-weight: 700;
      color: #374151;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .url-label-icon {
      font-size: 18px;
    }

    .url-hint {
      font-size: 12px;
      color: #6b7280;
      margin-bottom: 10px;
    }

    .url-box {
      position: relative;
      background: #f3f4f6;
      border: 2px solid #e5e7eb;
      border-radius: 12px;
      padding: 15px;
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 14px;
      word-break: break-all;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .url-text {
      flex: 1;
      color: #1f2937;
    }

    .copy-button {
      flex-shrink: 0;
      padding: 8px 16px;
      background: #667eea;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 12px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      white-space: nowrap;
    }

    .copy-button:hover {
      background: #5568d3;
    }

    .copy-button:active {
      transform: scale(0.95);
    }

    .copy-button.copied {
      background: #10b981;
    }

    .qr-code-container {
      text-align: center;
      margin: 30px 0;
    }

    .qr-code {
      max-width: 250px;
      width: 100%;
      height: auto;
      border: 2px solid #e5e7eb;
      border-radius: 12px;
      padding: 15px;
      background: #fff;
    }

    .qr-label {
      font-size: 12px;
      color: #6b7280;
      margin-top: 10px;
    }

    .expiry-info {
      background: #fef3c7;
      border: 2px solid #fcd34d;
      border-radius: 12px;
      padding: 15px;
      margin: 30px 0;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .expiry-icon {
      font-size: 24px;
      flex-shrink: 0;
    }

    .expiry-text {
      flex: 1;
      color: #78350f;
      font-size: 14px;
      font-weight: 600;
    }

    .warning-box {
      background: #fee2e2;
      border: 2px solid #fca5a5;
      border-radius: 12px;
      padding: 20px;
      margin: 20px 0;
    }

    .warning-title {
      color: #991b1b;
      font-weight: 700;
      font-size: 16px;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .warning-text {
      color: #991b1b;
      font-size: 14px;
      line-height: 1.6;
    }

    .next-steps {
      background: #eff6ff;
      border: 2px solid #bfdbfe;
      border-radius: 12px;
      padding: 20px;
      margin-top: 30px;
    }

    .next-steps-title {
      color: #1e40af;
      font-weight: 700;
      font-size: 16px;
      margin-bottom: 15px;
    }

    .next-steps-list {
      list-style: none;
      padding: 0;
    }

    .next-steps-list li {
      color: #1e40af;
      font-size: 14px;
      margin-bottom: 10px;
      padding-left: 25px;
      position: relative;
    }

    .next-steps-list li::before {
      content: "‚Üí";
      position: absolute;
      left: 0;
      font-weight: bold;
    }

    .action-buttons {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-top: 30px;
    }

    .action-button {
      padding: 15px;
      border: none;
      border-radius: 12px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      text-decoration: none;
      display: block;
      text-align: center;
    }

    .button-primary {
      background: #667eea;
      color: #fff;
    }

    .button-primary:hover {
      background: #5568d3;
      transform: translateY(-2px);
    }

    .button-secondary {
      background: #e5e7eb;
      color: #374151;
    }

    .button-secondary:hover {
      background: #d1d5db;
    }

    @media (max-width: 640px) {
      .card {
        padding: 30px 20px;
      }

      h1 {
        font-size: 24px;
      }

      .url-box {
        flex-direction: column;
        align-items: stretch;
      }

      .copy-button {
        width: 100%;
      }

      .action-buttons {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="success-icon">‚úÖ</div>
      <h1>Event Created Successfully!</h1>
      <div class="subtitle">Your temporary coat check system is ready</div>

      <div class="url-section">
        <div class="url-label">
          <span class="url-label-icon">üëî</span>
          <span>Staff URL (bookmark on staff phones)</span>
        </div>
        <div class="url-hint">Staff use this to scan QR codes and manage coats</div>
        <div class="url-box">
          <div class="url-text" id="staffUrl"><%= baseUrl %>/e/<%= slug %>/staff?token=<%= staffToken %></div>
          <button class="copy-button" onclick="copyUrl('staffUrl', this)">Copy</button>
        </div>
        <div class="qr-code-container">
          <img src="/api/qr-staff/<%= slug %>?token=<%= staffToken %>" alt="Staff URL QR Code" class="qr-code" id="staffQrCode">
          <div class="qr-label">QR code for staff URL (scan to bookmark)</div>
        </div>
      </div>

      <div class="url-section">
        <div class="url-label">
          <span class="url-label-icon">üì±</span>
          <span>Guest URL (write to NFC tags)</span>
        </div>
        <div class="url-hint">Guests tap NFC tag with this URL to get their tickets</div>
        <div class="url-box">
          <div class="url-text" id="guestUrl"><%= baseUrl %>/e/<%= slug %>/new</div>
          <button class="copy-button" onclick="copyUrl('guestUrl', this)">Copy</button>
        </div>
        <div class="qr-code-container">
          <img src="/api/qr-event/<%= slug %>" alt="Guest URL QR Code" class="qr-code" id="qrCode">
          <div class="qr-label">QR code for guest URL (for easy NFC programming)</div>
        </div>
      </div>

      <div class="expiry-info">
        <div class="expiry-icon">‚è±Ô∏è</div>
        <div class="expiry-text">
          Auto-deletes: <%= expiresAt %> (<%= durationHours %>h from now)
        </div>
      </div>

      <div class="warning-box">
        <div class="warning-title">
          <span>‚ö†Ô∏è</span>
          <span>Important - Save These URLs Now!</span>
        </div>
        <div class="warning-text">
          We don't send emails or store user accounts. Copy both URLs above and share
          them with your staff. If you lose these URLs, you'll need to create a new event.
        </div>
      </div>

      <div class="next-steps">
        <div class="next-steps-title">üìñ Next Steps</div>
        <ul class="next-steps-list">
          <li>Program your NFC tags with the Guest URL</li>
          <li>Send the Staff URL to your coat check team</li>
          <li>Staff should bookmark the Staff URL on their phones</li>
          <li>Test by tapping an NFC tag with your phone</li>
          <li>Verify staff can scan and check in a test ticket</li>
        </ul>
      </div>

      <div class="action-buttons">
        <a href="<%= baseUrl %>/e/<%= slug %>/staff?token=<%= staffToken %>" class="action-button button-primary">
          Open Staff Interface
        </a>
        <a href="/" class="action-button button-secondary">
          Create Another Event
        </a>
      </div>
    </div>
  </div>

  <script>
    function copyUrl(elementId, button) {
      const element = document.getElementById(elementId);
      const text = element.textContent;

      // Modern clipboard API
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(text).then(() => {
          showCopied(button);
        }).catch(() => {
          fallbackCopy(text, button);
        });
      } else {
        fallbackCopy(text, button);
      }
    }

    function fallbackCopy(text, button) {
      const textarea = document.createElement('textarea');
      textarea.value = text;
      textarea.style.position = 'fixed';
      textarea.style.opacity = '0';
      document.body.appendChild(textarea);
      textarea.select();
      try {
        document.execCommand('copy');
        showCopied(button);
      } catch (err) {
        alert('Failed to copy. Please copy manually.');
      }
      document.body.removeChild(textarea);
    }

    function showCopied(button) {
      const originalText = button.textContent;
      button.textContent = '‚úì Copied!';
      button.classList.add('copied');

      setTimeout(() => {
        button.textContent = originalText;
        button.classList.remove('copied');
      }, 2000);
    }

    // Auto-select URLs on click
    document.querySelectorAll('.url-text').forEach(element => {
      element.addEventListener('click', function() {
        if (window.getSelection) {
          const selection = window.getSelection();
          const range = document.createRange();
          range.selectNodeContents(this);
          selection.removeAllRanges();
          selection.addRange(range);
        }
      });
    });
  </script>
</body>
</html>
