<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0f172a">
  <title>Staff Dashboard - Garderobe Digital</title>
  <script src="/html5-qrcode.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      background: #0f172a;
      color: #ffffff;
      min-height: 100vh;
      padding: 20px;
      line-height: 1.5;
    }

    .header {
      max-width: 600px;
      margin: 0 auto 32px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .brand {
      font-size: 18px;
      font-weight: 700;
      color: #ffffff;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
    }

    .card {
      background: #1e293b;
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      padding: 32px;
      margin-bottom: 24px;
    }

    .card-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 20px;
      color: #ffffff;
    }

    .instruction {
      text-align: center;
      font-size: 14px;
      margin-bottom: 20px;
      color: #94a3b8;
      line-height: 1.6;
    }

    .scan-prompt {
      background: #0d9488;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
      margin-bottom: 20px;
    }

    .scan-text {
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 16px;
      color: #ffffff;
    }

    #qr-reader {
      width: 100%;
      min-height: 300px;
      border-radius: 8px;
      overflow: hidden;
      background: #000000;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #ffffff;
    }

    #qr-reader video {
      width: 100%;
      border-radius: 8px;
    }

    #qr-reader-loading {
      text-align: center;
      padding: 40px 20px;
    }

    .scanner-status {
      margin-top: 16px;
      padding: 12px;
      border-radius: 6px;
      font-size: 13px;
      display: none;
    }

    .scanner-status.success {
      background: rgba(16, 185, 129, 0.2);
      border: 1px solid rgba(16, 185, 129, 0.4);
      color: #10b981;
      display: block;
    }

    .scanner-status.error {
      background: rgba(239, 68, 68, 0.2);
      border: 1px solid rgba(239, 68, 68, 0.4);
      color: #ef4444;
      display: block;
    }

    .divider {
      text-align: center;
      margin: 24px 0;
      position: relative;
    }

    .divider::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
    }

    .divider-text {
      position: relative;
      background: #1e293b;
      padding: 0 12px;
      font-size: 13px;
      color: #64748b;
    }

    .manual-entry {
      margin-top: 20px;
    }

    .form-group {
      margin-bottom: 16px;
    }

    .form-label {
      display: block;
      margin-bottom: 8px;
      font-size: 14px;
      font-weight: 500;
      color: #e2e8f0;
    }

    .form-input {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 6px;
      background: rgba(255, 255, 255, 0.05);
      color: #ffffff;
      font-size: 16px;
      text-align: center;
      font-weight: 600;
      font-family: inherit;
      transition: border-color 150ms ease-in-out, background 150ms ease-in-out;
    }

    .form-input:focus {
      outline: none;
      border-color: #0d9488;
      background: rgba(255, 255, 255, 0.1);
    }

    .form-input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }

    .btn-lookup {
      width: 100%;
      padding: 12px;
      background: #0d9488;
      border: none;
      border-radius: 6px;
      color: #ffffff;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 150ms ease-in-out;
      font-family: inherit;
    }

    .btn-lookup:hover {
      background: #0f766e;
    }

    .btn-lookup:active {
      background: #115e59;
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
      margin-top: 20px;
    }

    .stat-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 20px;
      text-align: center;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 4px;
      color: #ffffff;
    }

    .stat-label {
      font-size: 13px;
      color: #94a3b8;
    }

    .mnemonic-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 8px;
      margin-bottom: 12px;
    }

    .mnemonic-input-wrapper {
      display: flex;
      align-items: center;
      gap: 8px;
      background: rgba(255, 255, 255, 0.05);
      padding: 8px 12px;
      border-radius: 6px;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .mnemonic-input-wrapper .word-number {
      color: #94a3b8;
      font-size: 12px;
      font-weight: 600;
      min-width: 12px;
    }

    .mnemonic-input-wrapper input {
      background: transparent;
      border: none;
      outline: none;
      color: #fff;
      font-family: 'Courier New', monospace;
      flex: 1;
      font-size: 14px;
    }

    @media (max-width: 480px) {
      .stats {
        grid-template-columns: 1fr;
      }

      .card {
        padding: 24px;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <div class="brand"><%= eventName || 'Garderobe Digital' %></div>
  </div>

  <div class="container">
    <div class="card">
      <div class="card-title">Scan Guest Ticket</div>

      <div class="scan-prompt">
        <div class="scan-text">Point camera at guest's QR code</div>
        <div id="qr-reader">
          <div id="qr-reader-loading">
            <p>Loading camera...</p>
          </div>
        </div>
        <div class="scanner-status" id="scanner-status"></div>
      </div>

      <div class="divider">
        <span class="divider-text">Guest doesn't have QR code?</span>
      </div>

      <div class="manual-entry">
        <form id="mnemonicLookupForm">
          <div class="form-group">
            <label class="form-label">Verify 6-Word Recovery Phrase</label>
            <div class="mnemonic-grid">
              <div class="mnemonic-input-wrapper">
                <span class="word-number">1</span>
                <input type="text" class="mnemonic-word-input" list="bip39-words" placeholder="word" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">
              </div>
              <div class="mnemonic-input-wrapper">
                <span class="word-number">2</span>
                <input type="text" class="mnemonic-word-input" list="bip39-words" placeholder="word" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">
              </div>
              <div class="mnemonic-input-wrapper">
                <span class="word-number">3</span>
                <input type="text" class="mnemonic-word-input" list="bip39-words" placeholder="word" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">
              </div>
              <div class="mnemonic-input-wrapper">
                <span class="word-number">4</span>
                <input type="text" class="mnemonic-word-input" list="bip39-words" placeholder="word" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">
              </div>
              <div class="mnemonic-input-wrapper">
                <span class="word-number">5</span>
                <input type="text" class="mnemonic-word-input" list="bip39-words" placeholder="word" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">
              </div>
              <div class="mnemonic-input-wrapper">
                <span class="word-number">6</span>
                <input type="text" class="mnemonic-word-input" list="bip39-words" placeholder="word" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">
              </div>
            </div>
            <datalist id="bip39-words"></datalist>
            <div style="font-size: 12px; color: #94a3b8; margin-top: 8px;">
              Guest can provide their recovery phrase to verify ownership
            </div>
          </div>
          <button type="submit" class="btn-lookup">
            Verify & Retrieve Coat
          </button>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-title">Check Ticket Status</div>
      <div style="background: rgba(251, 191, 36, 0.1); border: 1px solid rgba(251, 191, 36, 0.3); border-radius: 8px; padding: 12px; margin-bottom: 16px;">
        <div style="font-size: 13px; color: #fbbf24; font-weight: 600; margin-bottom: 6px; display: flex; align-items: center; gap: 6px;">
          <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          Warning: Not Secure
        </div>
        <div style="font-size: 12px; color: #e2e8f0; line-height: 1.5;">
          Ticket numbers are <strong>NOT authentication</strong>. Anyone can guess a number. Only use this to check if a coat is still here. Always require QR code or mnemonic phrase to authorize coat retrieval.
        </div>
      </div>

      <div class="manual-entry">
        <form id="manualLookupForm">
          <div class="form-group">
            <label for="ticketNumber" class="form-label">Enter Ticket Number (Info Only)</label>
            <input
              type="number"
              id="ticketNumber"
              class="form-input"
              placeholder="e.g., 142"
              min="1"
              required
            >
          </div>
          <button type="submit" class="btn-lookup">
            Check Status
          </button>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-title">Event Statistics</div>
      <div class="stats">
        <div class="stat-card">
          <div class="stat-value"><%= stats.ticketsIssued %></div>
          <div class="stat-label">Tickets Issued</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= stats.used %></div>
          <div class="stat-label">Coats Checked In</div>
        </div>
      </div>
      <div class="stats">
        <div class="stat-card">
          <div class="stat-value"><%= stats.available %></div>
          <div class="stat-label">Spots Available</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= stats.percentFull %>%</div>
          <div class="stat-label">Capacity Used</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Get slug and staff token from server
    const slug = '<%= slug %>';
    const staffToken = '<%= staffToken %>';

    // Check if library loaded
    if (typeof Html5Qrcode === 'undefined') {
      const statusEl = document.getElementById('scanner-status');
      statusEl.className = 'scanner-status error';
      statusEl.innerHTML = 'Scanner library failed to load.<br><small>Check your internet connection and try reloading the page. Use manual ticket entry below.</small>';
      document.getElementById('qr-reader-loading').innerHTML = '<p style="color: #ef4444;">Scanner unavailable</p>';
      throw new Error('Html5Qrcode library not loaded');
    }

    // Initialize QR Code Scanner
    const html5QrCode = new Html5Qrcode("qr-reader");
    const config = { fps: 10, qrbox: { width: 250, height: 250 } };

    function onScanSuccess(decodedText, decodedResult) {
      // Show success message
      const statusEl = document.getElementById('scanner-status');
      statusEl.className = 'scanner-status success';
      statusEl.textContent = 'QR Code detected! Opening ticket...';

      // Stop scanner
      html5QrCode.stop().then(() => {
        // Parse the ticket URL to extract path and query string
        let ticketUrl;

        if (decodedText.startsWith('http://') || decodedText.startsWith('https://')) {
          try {
            const url = new URL(decodedText);
            ticketUrl = url.pathname + url.search;
          } catch (e) {
            window.location.href = decodedText;
            return;
          }
        } else if (decodedText.startsWith('/')) {
          ticketUrl = decodedText;
        } else {
          ticketUrl = `/e/${slug}/ticket/${decodedText}`;
        }

        // Add staff token to URL
        const separator = ticketUrl.includes('?') ? '&' : '?';
        const staffUrl = ticketUrl + separator + 'staffToken=' + staffToken;

        window.location.href = staffUrl;
      }).catch(err => {
        console.error('Error stopping scanner:', err);
        try {
          const url = new URL(decodedText);
          const ticketPath = url.pathname + url.search;
          const sep = ticketPath.includes('?') ? '&' : '?';
          window.location.href = ticketPath + sep + 'staffToken=' + staffToken;
        } catch (e) {
          window.location.href = decodedText;
        }
      });
    }

    function onScanError(errorMessage) {
      // Silently ignore scan errors
    }

    // Start scanning
    Html5Qrcode.getCameras().then(cameras => {
      const loadingEl = document.getElementById('qr-reader-loading');
      if (loadingEl) loadingEl.style.display = 'none';

      if (cameras && cameras.length) {
        const statusEl = document.getElementById('scanner-status');
        statusEl.className = 'scanner-status success';
        statusEl.textContent = `Found ${cameras.length} camera(s). Starting scanner...`;

        const cameraId = cameras.length > 1 ? cameras[cameras.length - 1].id : cameras[0].id;

        html5QrCode.start(
          cameraId,
          config,
          onScanSuccess,
          onScanError
        ).then(() => {
          statusEl.style.display = 'none';
        }).catch(err => {
          statusEl.className = 'scanner-status error';
          if (err.toString().includes('NotAllowedError') || err.toString().includes('Permission')) {
            statusEl.innerHTML = 'Camera access denied.<br><small>Please tap "Allow" when your browser asks for camera permission, then reload this page.</small>';
          } else if (err.toString().includes('secure') || err.toString().includes('https')) {
            statusEl.innerHTML = 'Camera requires HTTPS.<br><small>Your browser blocks camera access on HTTP. Use manual ticket entry below, or set up HTTPS.</small>';
          } else {
            statusEl.innerHTML = `Unable to start camera: ${err.message || err}<br><small>Try reloading the page or use manual ticket entry below.</small>`;
          }
          console.error('Unable to start scanning:', err);
        });
      } else {
        const statusEl = document.getElementById('scanner-status');
        statusEl.className = 'scanner-status error';
        statusEl.innerHTML = 'No cameras detected.<br><small>Please check camera permissions in your browser settings, or use manual ticket entry below.</small>';
      }
    }).catch(err => {
      const statusEl = document.getElementById('scanner-status');
      statusEl.className = 'scanner-status error';
      console.error('Error getting cameras:', err);

      if (err.toString().includes('NotAllowedError') || err.toString().includes('Permission')) {
        statusEl.innerHTML = 'Camera permission denied.<br><small>Please enable camera access in Firefox Settings â†’ Site Permissions, then reload.</small>';
      } else if (err.toString().includes('secure') || err.toString().includes('https')) {
        statusEl.innerHTML = 'Camera requires secure connection (HTTPS).<br><small>Firefox requires HTTPS for camera access. Use manual ticket entry below.</small>';
      } else {
        statusEl.innerHTML = `Cannot access camera: ${err.message || err}<br><small>Use manual ticket entry below, or try a different browser (Chrome works better).</small>`;
      }
    });

    // Manual lookup form
    document.getElementById('manualLookupForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const ticketNumber = document.getElementById('ticketNumber').value;
      window.location.href = `/e/${slug}/ticket/${ticketNumber}?staffToken=${staffToken}`;
    });

    // Load BIP39 word list for datalist autocomplete
    fetch('/api/bip39-wordlist')
      .then(res => res.json())
      .then(data => {
        const datalist = document.getElementById('bip39-words');
        data.words.forEach(word => {
          const option = document.createElement('option');
          option.value = word;
          datalist.appendChild(option);
        });
      })
      .catch(err => console.error('Failed to load word list:', err));

    // Mnemonic lookup form
    document.getElementById('mnemonicLookupForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      // Collect all 6 words
      const wordInputs = document.querySelectorAll('.mnemonic-word-input');
      const mnemonic = Array.from(wordInputs).map(input => input.value.trim().toLowerCase()).join(' ');

      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalBtnText = submitBtn.textContent;

      if (!mnemonic || mnemonic.split(' ').length !== 6) {
        alert('Please enter all 6 words');
        return;
      }

      // Disable button and show loading
      submitBtn.disabled = true;
      submitBtn.textContent = 'Verifying...';

      try {
        const response = await fetch(`/e/${slug}/api/verify-mnemonic`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            mnemonic: mnemonic,
            staffToken: staffToken
          })
        });

        const data = await response.json();

        if (response.ok && data.found) {
          // Success! Redirect to ticket
          submitBtn.textContent = 'Found! Opening...';
          window.location.href = `/e/${slug}/ticket/${data.ticketId}?staffToken=${staffToken}`;
        } else {
          // Not found
          submitBtn.disabled = false;
          submitBtn.textContent = originalBtnText;
          alert(data.error || 'No ticket found with that recovery phrase. Please check the phrase and try again.');
        }
      } catch (error) {
        console.error('Error verifying mnemonic:', error);
        submitBtn.disabled = false;
        submitBtn.textContent = originalBtnText;
        alert('Error verifying recovery phrase. Please try again.');
      }
    });
  </script>
</body>
</html>
