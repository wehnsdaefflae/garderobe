<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0f172a">
  <title>Create Event - Garderobe Digital</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      background: #f8fafc;
      color: #0f172a;
      min-height: 100vh;
      padding: 20px;
      line-height: 1.5;
    }

    /* Header */
    .header {
      max-width: 600px;
      margin: 0 auto 32px;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      color: #475569;
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      transition: color 150ms ease-in-out;
    }

    .back-link:hover {
      color: #0f172a;
    }

    .back-icon {
      width: 16px;
      height: 16px;
    }

    /* Container */
    .container {
      max-width: 600px;
      margin: 0 auto;
    }

    .card {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 48px 40px;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    h1 {
      font-size: 30px;
      font-weight: 700;
      margin-bottom: 8px;
      text-align: center;
      color: #0f172a;
    }

    .subtitle {
      text-align: center;
      color: #64748b;
      margin-bottom: 40px;
      font-size: 14px;
    }

    /* Form */
    .form-group {
      margin-bottom: 24px;
    }

    .form-label {
      display: block;
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 6px;
      color: #0f172a;
    }

    .form-hint {
      font-size: 12px;
      color: #64748b;
      margin-bottom: 8px;
    }

    .form-input {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid #e2e8f0;
      border-radius: 6px;
      background: #ffffff;
      color: #0f172a;
      font-size: 16px;
      font-family: inherit;
      transition: border-color 150ms ease-in-out, box-shadow 150ms ease-in-out;
    }

    .form-input:focus {
      outline: none;
      border-color: #0d9488;
      box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
    }

    .form-input::placeholder {
      color: #94a3b8;
    }

    .location-inputs {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .location-input-label {
      font-size: 11px;
      font-weight: 500;
      color: #64748b;
      margin-bottom: 4px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Duration Display */
    .duration-display {
      background: #f1f5f9;
      border: 1px solid #cbd5e1;
      border-radius: 8px;
      padding: 24px;
      text-align: center;
    }

    .duration-value {
      font-size: 40px;
      font-weight: 800;
      color: #0d9488;
      margin-bottom: 8px;
    }

    .duration-desc {
      font-size: 14px;
      color: #475569;
    }

    /* Challenge Box */
    .challenge-box {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 16px;
    }

    .challenge-question {
      font-size: 18px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 12px;
      color: #0f172a;
    }

    .challenge-input {
      text-align: center;
      font-size: 20px;
      font-weight: 700;
    }

    /* Submit Button */
    .submit-button {
      width: 100%;
      padding: 14px;
      background: #0d9488;
      border: none;
      border-radius: 6px;
      color: #ffffff;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 150ms ease-in-out;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      font-family: inherit;
    }

    .submit-button:hover {
      background: #0f766e;
    }

    .submit-button:active {
      background: #115e59;
    }

    /* Info Box */
    .info-box {
      background: #ecfdf5;
      border: 1px solid #a7f3d0;
      border-radius: 8px;
      padding: 16px;
      margin-top: 20px;
      font-size: 13px;
      line-height: 1.6;
      color: #064e3b;
      display: flex;
      gap: 12px;
    }

    .info-icon {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      color: #10b981;
    }

    @media (max-width: 640px) {
      .card {
        padding: 32px 24px;
      }

      h1 {
        font-size: 24px;
      }

      .location-inputs {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <a href="/" class="back-link">
      <svg class="back-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Home
    </a>
  </div>

  <div class="container">
    <div class="card">
      <h1>Create Your Event</h1>
      <div class="subtitle">Setup takes under 30 seconds</div>

      <form method="POST" action="/api/events" id="eventForm">
        <div class="form-group">
          <label for="eventName" class="form-label">Event Name (Optional)</label>
          <div class="form-hint">For your reference only, not shown to guests</div>
          <input
            type="text"
            id="eventName"
            name="eventName"
            class="form-input"
            placeholder="e.g., Oktoberfest 2025"
            maxlength="100"
            autofocus
          >
        </div>

        <div class="form-group">
          <label class="form-label">Location Layout</label>
          <div class="form-hint">Configure your physical coat check space</div>
          <div class="location-inputs">
            <div>
              <div class="location-input-label">Rack Start</div>
              <input
                type="text"
                id="rackStart"
                name="rackStart"
                class="form-input"
                placeholder="A"
                value="A"
                required
                maxlength="1"
                pattern="[A-Z]"
              >
            </div>
            <div>
              <div class="location-input-label">Rack End</div>
              <input
                type="text"
                id="rackEnd"
                name="rackEnd"
                class="form-input"
                placeholder="F"
                value="F"
                required
                maxlength="1"
                pattern="[A-Z]"
              >
            </div>
            <div>
              <div class="location-input-label">Spot Start</div>
              <input
                type="number"
                id="spotStart"
                name="spotStart"
                class="form-input"
                placeholder="1"
                value="1"
                required
                min="1"
                max="999"
              >
            </div>
            <div>
              <div class="location-input-label">Spot End</div>
              <input
                type="number"
                id="spotEnd"
                name="spotEnd"
                class="form-input"
                placeholder="50"
                value="50"
                required
                min="1"
                max="999"
              >
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Event Duration</label>
          <div class="duration-display">
            <div class="duration-value">72 hours</div>
            <div class="duration-desc">Your event and all data will automatically be deleted after 3 days</div>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Security Check</label>
          <div class="form-hint">Prove you're human (prevents automated abuse)</div>
          <div class="challenge-box">
            <div class="challenge-question">
              What is <%= challenge.question %>?
            </div>
            <input
              type="number"
              id="challengeAnswer"
              name="challengeAnswer"
              class="form-input challenge-input"
              placeholder="Your answer"
              required
            >
            <input type="hidden" name="challengeId" value="<%= challenge.challengeId %>">
          </div>
        </div>

        <button type="submit" class="submit-button">
          Create Event
        </button>

        <div class="info-box">
          <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <strong>No registration required!</strong> You'll get unique URLs to copy immediately. Save them - we won't send them to you.
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Auto-uppercase rack inputs
    document.getElementById('rackStart').addEventListener('input', function(e) {
      e.target.value = e.target.value.toUpperCase();
    });
    document.getElementById('rackEnd').addEventListener('input', function(e) {
      e.target.value = e.target.value.toUpperCase();
    });

    // Form validation
    document.getElementById('eventForm').addEventListener('submit', function(e) {
      const rackStart = document.getElementById('rackStart').value;
      const rackEnd = document.getElementById('rackEnd').value;
      const spotStart = parseInt(document.getElementById('spotStart').value);
      const spotEnd = parseInt(document.getElementById('spotEnd').value);

      if (rackStart > rackEnd) {
        e.preventDefault();
        alert('Rack Start must come before Rack End (e.g., A before F)');
        return;
      }

      if (spotStart > spotEnd) {
        e.preventDefault();
        alert('Spot Start must be less than Spot End');
        return;
      }

      const totalLocations = (rackEnd.charCodeAt(0) - rackStart.charCodeAt(0) + 1) * (spotEnd - spotStart + 1);
      if (totalLocations > 10000) {
        e.preventDefault();
        alert(`Too many locations (${totalLocations}). Maximum is 10,000.`);
        return;
      }
    });
  </script>
</body>
</html>
