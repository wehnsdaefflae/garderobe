<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0f172a">
  <title>Create Event - Garderobe Digital</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      background: #f8fafc;
      color: #0f172a;
      min-height: 100vh;
      padding: 20px;
      line-height: 1.5;
    }

    /* Header */
    .header {
      max-width: 600px;
      margin: 0 auto 32px;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      color: #475569;
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      transition: color 150ms ease-in-out;
    }

    .back-link:hover {
      color: #0f172a;
    }

    .back-icon {
      width: 16px;
      height: 16px;
    }

    /* Container */
    .container {
      max-width: 600px;
      margin: 0 auto;
    }

    .card {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 48px 40px;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    h1 {
      font-size: 30px;
      font-weight: 700;
      margin-bottom: 8px;
      text-align: center;
      color: #0f172a;
    }

    .subtitle {
      text-align: center;
      color: #64748b;
      margin-bottom: 40px;
      font-size: 14px;
    }

    /* Form */
    .form-group {
      margin-bottom: 24px;
    }

    .form-label {
      display: block;
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 6px;
      color: #0f172a;
    }

    .form-hint {
      font-size: 12px;
      color: #64748b;
      margin-bottom: 8px;
    }

    .form-input {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid #e2e8f0;
      border-radius: 6px;
      background: #ffffff;
      color: #0f172a;
      font-size: 16px;
      font-family: inherit;
      transition: border-color 150ms ease-in-out, box-shadow 150ms ease-in-out;
    }

    .form-input:focus {
      outline: none;
      border-color: #0d9488;
      box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
    }

    .form-input::placeholder {
      color: #94a3b8;
    }

    .location-inputs {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .location-input-label {
      font-size: 11px;
      font-weight: 500;
      color: #64748b;
      margin-bottom: 4px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Duration Display */
    .duration-display {
      background: #f1f5f9;
      border: 1px solid #cbd5e1;
      border-radius: 8px;
      padding: 24px;
      text-align: center;
    }

    .duration-value {
      font-size: 40px;
      font-weight: 800;
      color: #0d9488;
      margin-bottom: 8px;
    }

    .duration-desc {
      font-size: 14px;
      color: #475569;
    }

    /* Challenge Progress */
    .challenge-progress {
      text-align: center;
      font-size: 14px;
      font-weight: 600;
      color: #0d9488;
      margin-bottom: 16px;
      padding: 12px;
      background: #f0fdfa;
      border-radius: 8px;
    }

    /* Challenge Box */
    .challenge-box {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 16px;
    }

    .challenge-question {
      font-size: 18px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 16px;
      color: #0f172a;
    }

    .illusion-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px;
      background: #ffffff;
      border-radius: 8px;
      padding: 20px;
      min-height: 300px;
      overflow: visible;
    }

    .illusion-container svg {
      max-width: 100%;
      height: auto;
      display: block;
    }

    .illusion-container svg .clickable-option {
      cursor: pointer;
      transition: opacity 150ms ease-in-out;
    }

    .illusion-container svg .clickable-option:hover {
      opacity: 0.7;
    }

    .illusion-container svg .clickable-option.selected line,
    .illusion-container svg .clickable-option.selected circle:not([fill="transparent"]),
    .illusion-container svg .clickable-option.selected rect:not([fill="transparent"]) {
      stroke: #0d9488;
      stroke-width: 4;
    }

    .option-buttons {
      display: none; /* Hidden - user clicks directly on SVG labels */
    }

    .option-btn {
      padding: 14px;
      background: #ffffff;
      border: 2px solid #e2e8f0;
      border-radius: 6px;
      color: #0f172a;
      font-size: 18px;
      font-weight: 700;
      cursor: pointer;
      transition: all 150ms ease-in-out;
      font-family: inherit;
    }

    .option-btn:hover {
      border-color: #0d9488;
      background: #f0fdfa;
    }

    .option-btn.selected {
      background: #0d9488;
      border-color: #0d9488;
      color: #ffffff;
    }

    /* Submit Button */
    .submit-button {
      width: 100%;
      padding: 14px;
      background: #0d9488;
      border: none;
      border-radius: 6px;
      color: #ffffff;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 150ms ease-in-out;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      font-family: inherit;
      margin-top: 16px;
    }

    .submit-button:hover {
      background: #0f766e;
    }

    .submit-button:active {
      background: #115e59;
    }

    /* Info Box */
    .info-box {
      background: #ecfdf5;
      border: 1px solid #a7f3d0;
      border-radius: 8px;
      padding: 16px;
      margin-top: 20px;
      font-size: 13px;
      line-height: 1.6;
      color: #064e3b;
      display: flex;
      gap: 12px;
    }

    .info-icon {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      color: #10b981;
    }

    @media (max-width: 640px) {
      .card {
        padding: 32px 24px;
      }

      h1 {
        font-size: 24px;
      }

      .location-inputs {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <a href="/" class="back-link">
      <svg class="back-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Home
    </a>
  </div>

  <div class="container">
    <div class="card">
      <h1>Create Your Event</h1>
      <div class="subtitle">Setup takes under 30 seconds</div>

      <form method="POST" action="/api/events" id="eventForm">
        <div class="form-group">
          <label for="eventName" class="form-label">Event Name (Optional)</label>
          <div class="form-hint">For your reference only, not shown to guests</div>
          <input
            type="text"
            id="eventName"
            name="eventName"
            class="form-input"
            placeholder="e.g., Oktoberfest 2025"
            maxlength="100"
            autofocus
          >
        </div>

        <div class="form-group">
          <label class="form-label">Location Layout</label>
          <div class="form-hint">Configure your physical coat check space</div>
          <div class="location-inputs">
            <div>
              <div class="location-input-label">Rack Start</div>
              <input
                type="text"
                id="rackStart"
                name="rackStart"
                class="form-input"
                placeholder="A"
                value="A"
                required
                maxlength="1"
                pattern="[A-Z]"
              >
            </div>
            <div>
              <div class="location-input-label">Rack End</div>
              <input
                type="text"
                id="rackEnd"
                name="rackEnd"
                class="form-input"
                placeholder="F"
                value="F"
                required
                maxlength="1"
                pattern="[A-Z]"
              >
            </div>
            <div>
              <div class="location-input-label">Spot Start</div>
              <input
                type="number"
                id="spotStart"
                name="spotStart"
                class="form-input"
                placeholder="1"
                value="1"
                required
                min="1"
                max="999"
              >
            </div>
            <div>
              <div class="location-input-label">Spot End</div>
              <input
                type="number"
                id="spotEnd"
                name="spotEnd"
                class="form-input"
                placeholder="50"
                value="50"
                required
                min="1"
                max="999"
              >
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Event Duration</label>
          <div class="duration-display">
            <div class="duration-value">72 hours</div>
            <div class="duration-desc">Your event and all data will automatically be deleted after 3 days</div>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Security Check</label>
          <div class="form-hint">Pass 4 challenges to prove you're human (0.39% bot success rate)</div>

          <!-- Progress indicator -->
          <div class="challenge-progress">
            Challenge <span id="currentChallenge">1</span> of 4
          </div>

          <!-- All 4 challenges (hidden by CSS, shown one at a time) -->
          <% challenges.forEach((challenge, index) => { %>
            <div class="challenge-box challenge-step" data-challenge="<%= index %>" style="display: <%= index === 0 ? 'block' : 'none' %>">
              <div class="challenge-question">
                <%= challenge.question %>
              </div>
              <div class="illusion-container">
                <%- challenge.svg %>
              </div>
              <div class="option-buttons">
                <% challenge.options.forEach(option => { %>
                  <button type="button" class="option-btn" data-challenge-index="<%= index %>" data-answer="<%= option %>">
                    <%= option %>
                  </button>
                <% }); %>
              </div>

              <!-- Hidden inputs for challenge data -->
              <input type="hidden" name="challengeIds[]" value="<%= challenge.challengeId %>">
              <input type="hidden" class="challenge-answer" data-answer-index="<%= index %>" name="challengeAnswers[]" value="">
            </div>
          <% }); %>
        </div>

        <button type="submit" class="submit-button" id="submitButton" style="display: none">
          Create Event
        </button>

        <div class="info-box">
          <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <strong>No registration required!</strong> You'll get unique URLs to copy immediately. Save them - we won't send them to you.
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Auto-uppercase rack inputs
    document.getElementById('rackStart').addEventListener('input', function(e) {
      e.target.value = e.target.value.toUpperCase();
    });
    document.getElementById('rackEnd').addEventListener('input', function(e) {
      e.target.value = e.target.value.toUpperCase();
    });

    // Multi-challenge navigation logic
    let currentChallengeIndex = 0;
    const answers = ['', '', '', '']; // Store all 4 answers

    // Handle clicks on SVG elements (clickable groups)
    document.querySelectorAll('.illusion-container svg .clickable-option').forEach(group => {
      group.addEventListener('click', function() {
        const answer = this.dataset.answer; // Get the letter (A, B, C, or D) from data attribute

        // Find which challenge this group belongs to
        const challengeBox = this.closest('.challenge-step');
        const challengeIndex = parseInt(challengeBox.dataset.challenge);

        // Remove selected state from all options in this challenge
        challengeBox.querySelectorAll('.clickable-option').forEach(opt => {
          opt.classList.remove('selected');
        });

        // Add selected state to clicked group
        this.classList.add('selected');

        // Store answer in memory and hidden field
        answers[challengeIndex] = answer;
        document.querySelector(`.challenge-answer[data-answer-index="${challengeIndex}"]`).value = answer;

        // Auto-advance to next challenge or show submit button
        if (challengeIndex < 3) {
          // Not the last challenge - auto-advance after short delay
          setTimeout(() => {
            // Hide current challenge
            document.querySelectorAll('.challenge-step').forEach(step => {
              step.style.display = 'none';
            });

            // Show next challenge
            const nextIndex = challengeIndex + 1;
            document.querySelector(`.challenge-step[data-challenge="${nextIndex}"]`).style.display = 'block';

            // Update progress indicator
            document.getElementById('currentChallenge').textContent = nextIndex + 1;
            currentChallengeIndex = nextIndex;
          }, 300); // 300ms delay for visual feedback
        } else {
          // Last challenge - show submit button after short delay
          setTimeout(() => {
            document.getElementById('submitButton').style.display = 'block';
          }, 300);
        }
      });
    });

    // Form validation
    document.getElementById('eventForm').addEventListener('submit', function(e) {
      const rackStart = document.getElementById('rackStart').value;
      const rackEnd = document.getElementById('rackEnd').value;
      const spotStart = parseInt(document.getElementById('spotStart').value);
      const spotEnd = parseInt(document.getElementById('spotEnd').value);

      // Check if all 4 challenge answers are provided
      const allAnswered = answers.every(answer => answer !== '');
      if (!allAnswered) {
        e.preventDefault();
        alert('Please answer all 4 security challenges');
        return;
      }

      if (rackStart > rackEnd) {
        e.preventDefault();
        alert('Rack Start must come before Rack End (e.g., A before F)');
        return;
      }

      if (spotStart > spotEnd) {
        e.preventDefault();
        alert('Spot Start must be less than Spot End');
        return;
      }

      const totalLocations = (rackEnd.charCodeAt(0) - rackStart.charCodeAt(0) + 1) * (spotEnd - spotStart + 1);
      if (totalLocations > 10000) {
        e.preventDefault();
        alert(`Too many locations (${totalLocations}). Maximum is 10,000.`);
        return;
      }
    });
  </script>
</body>
</html>
