# Caddyfile for automatic HTTPS
# Replace {$DOMAIN} with your actual domain in production

{$DOMAIN:localhost} {
    # Automatic HTTPS with Let's Encrypt
    # For local development, use 'tls internal'
    # For production, remove the tls directive entirely

    # Reverse proxy to the app
    reverse_proxy app:3000

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # Enable XSS protection
        X-XSS-Protection "1; mode=block"
        # Content Security Policy (adjust as needed)
        Content-Security-Policy "default-src 'self' 'unsafe-inline' data:;"
        # Remove server header
        -Server
    }

    # Logging
    log {
        output file /data/access.log {
            roll_size 100mb
            roll_keep 5
        }
        format json
    }
}
